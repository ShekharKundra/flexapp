
<html>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.0/jquery.min.js"></script>
<!-- Latest compiled and minified JavaScript -->
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa"
  crossorigin="anonymous"></script>
<!-- Latest compiled and minified CSS -->
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u"
  crossorigin="anonymous">
<link href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
<link href="../assets/css/main.css" rel="stylesheet">
<div class="container">

    <div class="form-container">
        <h2><center>Register New User</center></h2>
        <div class="row">
            <!-- <div class="col-sm-8"> -->
            <div>
                <form method="post" action="/user/registration">
                    <div class="form-group">
                        <label for="firstname">First Name</label>
                        <input type="text" name="firstname" id="firstname" class="form-control" value="" required
                            oninvalid="this.setCustomValidity('Enter First Name')" />
                    </div>
                    <div class="form-group">
                        <label for="lastname">Last Name</label>
                        <input type="text" name="lastname" id="lastname" class="form-control" value="" required
                            oninvalid="this.setCustomValidity('Enter Last Name')" />
                    </div>
                    <div class="form-group">
                        <label for="email">Email ID</label>
                        <input type="email" name="email" id="email" class="form-control" value="" required />
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" title="Password must contain at least 6 characters, including UPPER/lowercase and numbers"
                            name="password" id="password" class="form-control" required pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{6,}"
                            onchange="this.setCustomValidity(this.validity.patternMismatch ? this.title : '');  if(this.checkValidity()) form.cpassword.pattern = this.value;" />
                    </div>
                    <div class="form-group">
                        <label for="cpassword">Confirm Password</label>
                        <input type="password" title="Please enter the same Password as above" name="cpassword" id="cpassword"
                            class="form-control" required pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{6,}" onchange="  this.setCustomValidity(this.validity.patternMismatch ? this.title : '');" />
                    </div>
                    <div class="form-group">
                        <center>
                            <p><input type="checkbox" required name="terms"> I accept the <u>Terms and Conditions</u></p>
                            <button type="submit" class="btn btn-primary" name="submit">Register</button>
                            <a href="/" class="btn btn-warning">Cancel</a>
                        </center>
                    </div>
                </form>
                
            </div>
            
        </div>

    </div>
</div>
<% include ../partial/footer %>