<% include ../partial/header %>

<div class="container-fluid" style="background-color:floralwhite; ">
  <h2>Sale Order</h2>
  <form method="POST">
    <p>
     

      <div class="row" style=" font-size: 18px; padding:10px">
        <div class="col-sm-12">
          <span><input type="text" class="form-control  form-control-sm" value="Customer :
            <%= companydata.companyname %>,  <%= companydata.state %>, <%= companydata.city %>, <%= companydata.address1 %>"
              readonly> </span>
          <input type="hidden" id="orderid" name="orderid" value="<%= ordermasterdata.id %>">
        </div>
        <div class="col-sm-12">

          <div class="form-group row">
            <div class="col-xs-3">
              <label for="ex1"></label>
              <input class="form-control  form-control-sm" id="ex1" type="text" value="Order Number: <%= ordermasterdata.ordernumber %>"
                readonly>
            </div>
            <div class="col-xs-3">
              <label for="ex1"></label>
              <input class="form-control form-control-sm" id="ex1" type="text" value="Order Date: <%= ordermasterdata.orderdate %>"
                readonly>
            </div>
            <div class="col-xs-3">
              <label for="ex1"></label>
              <input class="form-control form-control-sm" id="ex1" type="text" value="Delivery Date: <%= ordermasterdata.deliverydate %>"
                readonly>
            </div>
            <div class="col-xs-3">
              <label for="ex2"></label>
              <input class="form-control form-control-sm" id="ex2" type="text" value="Status:  <%= ordermasterdata.status %>"
                readonly>
            </div>
          </div> </span>
          <input type="hidden" id="orderid" name="orderid" value=<%=ordermasterdata.id %> >
        </div>

      </div>

      <div class="row" style=" font-size: 18px; padding:10px">
        <div class="col-sm-2">
          <span><select class="form-control form-control-sm" name="arch" id="arch" required>
              <option value="" disabled selected>Arch</option>
              <option value="REJ Single Arch">REJ Single Arch </option>
              <option value="REJ Double Arch">REJ Double Arch </option>
              <option value="REJ Hand Wrap">REJ Hand Wrap</option>
            </select></span>
        </div>
        <div class="col-sm-2">
          <span><select class="form-control form-control-sm" name="size" id="size" required>
              <option value="" disabled selected>Size</option>
              <option value="25">25</option>
              <option value="32">32</option>
              <option value="40">40</option>
              <option value="50">50</option>
              <option value="65">65</option>
              <option value="80">80</option>
              <option value="100">100</option>
              <option value="125">125</option>
              <option value="150">150</option>
              <option value="200">200</option>
              <option value="250">250</option>
              <option value="300">300</option>
              <option value="350">350</option>
              <option value="400">400</option>
              <option value="450">450</option>
              <option value="500">500</option>
              <option value="550">550</option>
              <option value="600">600</option>
              <option value="700">700</option>
              <option value="750">750</option>
            </select></span>
        </div>
        <div class="col-sm-2">
          <span><select class="form-control form-control-sm" name="drilling" id="drilling" required>
              <option value="" disabled selected>Drilling</option>
              <option value="Table D">Table D</option>
              <option value="ANSI">ANSI</option>
              <option value="Table E">Table E</option>
              <option value="BS 4504">BS 4504</option>
              <option value="OT">Other</option>
            </select>
        </div>
        <div class="col-sm-2">
          <span><select class="form-control form-control-sm" name="prating" id="prating" required>
              <option value="" disabled selected>Pressure Rating</option>
              <option value="PN 10">PN 10</option>
              <option value="PN 16">PN 16</option>
              <option value="PN 20">PN 20</option>

            </select></div>

        <div class="col-sm-2">
          <span><select class="form-control form-control-sm" name="controlunit" id="controlunit" required>
              <option value="" disabled selected>CU</option>
              <option value="CU">With Control Unit</option>
              <option value="/">Without Control Unit</option>
            </select>
        </div>
        <div class="col-sm-2">
          <span><input type="number" class="form-control form-control-sm" placeholder="Quantity" name="quantity" id="quantity"
              required></td>
        </div>

      </div>

      <p>
        <center><button type="submit" class="btn btn-info" formaction="/orders/orderdetails/<%= ordermasterdata.id %>">Add
            New</button>&nbsp;&nbsp;&nbsp;
          <input type="reset" value="Cancel" class="btn btn-warning">
      </p>

      </center>
    </p>

    <div class="row" style="background-color: #F5B041; font-size: 18px" align=left>
      <div class="col-sm-2" style="padding:10px;" align=center>
        <span>Arch
        </span>
      </div>
      <div class="col-sm-1" style="padding:10px;" align=center>
        <span>Size
        </span>
      </div>
      <div class="col-sm-2" style="padding:10px;" align=center>
        <span>Drilling
        </span>
      </div>
      <div class="col-sm-2" style="padding:10px;" align=center>
        <span>Pressure Rating
        </span>
      </div>
      <div class="col-sm-2" style="padding:10px;" align=center>
        <span>Control Unit
        </span>
      </div>
      <div class="col-sm-2" style="padding:10px;" align=center>
        <span>Quantity
        </span>
      </div>
      <div class="col-sm-1" style="padding:10px;" align=center>
        <span>
        </span>
      </div>
    </div>

    <% if(orderdetaildata) { %>
    <% orderdetaildata.forEach(function(el, index) {%>
    <div class="row" style=" font-size: 16px">
      <div class="col-sm-2" style="padding:10px;" align=center>
        <span>
          <%= el.orderarch %>
        </span>
      </div>
      <div class="col-sm-1" style="padding:10px;" align=center>
        <span>
          <%= el.ordersize %>
        </span>
      </div>
      <div class="col-sm-2" style="padding:10px;" align=center>
        <span>
          <%= el.orderdrilling %>
        </span>
      </div>
      <div class="col-sm-2" style="padding:10px;" align=center>
        <span>
          <%= el.orderprating %>
        </span>
      </div>
      <div class="col-sm-2" style="padding:10px;" align=center>
        <span>
          <%= el.ordercontrolunit %>
        </span>
      </div>
      <div class="col-sm-2" style="padding:10px;" align=center>
        <span>
          <%= el.orderquantity %>
        </span>
      </div>
      <div class="col-sm-1" style="padding:10px;" align=center>
        <span>
          <a href="#" data-toggle="tooltip" title="Remove Order"> <button type="submit" class="btn" formaction="/orders/deleteselection/<%= el._id %>"
              style="font-size:20px;color:red;">
              <i class="fa fa-remove"></i></button></a>
        </span>
      </div>
    </div>
    <% }) %>
    <% } %>
    <p>
      <center><button type="submit" class="btn btn-success" formaction="/orders/neworder/<%= ordermasterdata.id %>">Submit</button>
      </center>
    </p>
  </form>

</div>

<script>
  $(document).ready(function () {
    $('[data-toggle="tooltip"]').tooltip();
  });
</script>
<% include ../partial/footer %>